@model WAD_Assignment.Models.FilmForm
@{
    Layout = "_CMS";
}


    <section class="indent-1">
        <section>
            <h2 id="SearchLabelText" style="font-size:20px">@Model.FilmTitle</h2>
            <img style="max-width: 320px; max-height: 314px;" src="~/images/@Model.FilmImage" alt="@Model.FilmTitle" />
        </section>
        <section>
            <form asp-controller="CMS" asp-action="UpdateFilm">
                <input type="hidden" name="FilmID" value="@Model.FilmID" />
                <div>
                    <label>Film Title</label>
                    <input asp-for="FilmTitle" />
                    <span asp-validation-for="FilmTitle" class="error"></span>
                </div>

                <div>
                    <label asp-for="FilmCertificate">Film Certificate</label>
                    <input asp-for="FilmCertificate" />
                </div>

                <div>
                    <label asp-for="FilmDescription">Film Description</label>
                    <textarea asp-for="FilmDescription"></textarea>
                </div>

                <div>
                    <label asp-for="FilmImage">Film Image</label>
                    <input type="text" asp-for="FilmImage" />
                </div>

                <div>
                    <label asp-for="FilmPrice">Film Price</label>
                    <input type="text" asp-for="FilmPrice" />
                </div>

                <div>
                    <label asp-for="Stars">Stars</label>
                    <input type="text" asp-for="Stars" />
                </div>

                <div>
                    <label asp-for="ReleaseDate">Release Date</label>
                    <input type="date" asp-for="ReleaseDate" />
                </div>

                <div>
                    <input type="submit" value="Update" class="edit" />
                </div>

            </form>
        </section>
    </section>
        
    





