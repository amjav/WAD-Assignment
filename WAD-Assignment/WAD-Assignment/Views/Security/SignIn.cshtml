@model SignIn
@{
    Layout = "_CMS";
}
<section class="SignIn">
    <form asp-controller="Security" asp-action="SignIn" method="post">
        <h2 class="fullWidth">Log In</h2>
        <div>
            <label asp-for="UserName"></label>
            <input type="text" asp-for="UserName" />
        </div>
        <div>
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" />
        </div>
        <div>
            <label asp-for="RememberMe"></label>
            <input type="checkbox" asp-for="RememberMe" />
        </div>
        <div>
            <button type="submit" class="SearchInput">Sign In</button>
        </div>
        <div asp-validation-summary="All" class="message"></div>

        <h3><a asp-controller="security" asp-action="register" style="font-size: 20px;">Create New User Account</a></h3>

    </form>
</section>

