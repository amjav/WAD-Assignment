@model Register
@{
    Layout = "_CMS";
}

<section class="SignIn">

<form method="post">
    <h2 id="SearchLabelText">New User</h2>
    <div>
        <label asp-for="UserName">Username</label>
        <input type="text" asp-for="UserName" />
    </div>
    <div>
        <label asp-for="Password">Password</label>
        <input type="password" asp-for="Password" />
    </div>    
    <div>
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input type="password" asp-for="ConfirmPassword" />
    </div>
    <div>
        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" />
    </div>
    <div>
        <label asp-for="FullName">Full Name</label>
        <input type="text" asp-for="FullName" />
    </div>
    <div>
        <label asp-for="BirthDate">Date of Birth</label>
        <input type="date" asp-for="BirthDate" />
    </div>
    <div>
        <button type="submit" class="SearchInput">Register</button>
    </div>
    <div>
        <div asp-validation-summary="All" class="message" style="margin-left:70px;"></div>
    </div>

    <h3><a asp-page="/Security/SignIn" style="font-size:20px; text-decoration:none;" >Go To Sign-In Page</a></h3>

</form>
</section>


