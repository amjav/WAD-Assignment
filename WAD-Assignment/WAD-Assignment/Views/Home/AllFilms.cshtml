
@{
    ViewData["Title"] = "Full Film List";
    ViewData["PageHeading"] = "Full Film List";

}


<section class="noflex">
    <form asp-action="Search" method="get">
        <div>

            <label class="SearchLabelText" for="SearchString">Search by Title: </label> <input class="SearchLabel" type="text" name="SearchString" id="SearchString" />

            <input class="SearchInput" type="submit" value="Filter" />

        </div>
    </form>

    <div>
        @if (ViewData["SearchString"] != null && (string)ViewData["SearchString"] != String.Empty)
        {
            @foreach (var item in Model)
            {
                <p><a asp-controller="Home" asp-action="FilmDetails" asp-route-id="@item.FilmID">@item.FilmTitle Details</a></p>
            }

            if (Model.Count == 0)
            {
                <p>Sorry no matches.</p>
            }
        }
    </div>

</section>


<section id="FilmsSection" class="wrap">
    @foreach (var item in Model)
    {

        <div class="BoxContainer">
            <img src="~/images/@item.FilmImage" alt="@item.FilmTitle" class="BoxImage" style="width:100%" />
            <div class="BoxMiddle">
                <div class="BoxText"><a asp-controller="Home" asp-action="FilmDetails" asp-route-id="@item.FilmID">@item.FilmTitle</a></div>
            </div>
        </div>
    }
</section>
