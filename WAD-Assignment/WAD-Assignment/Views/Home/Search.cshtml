@{

    ViewData["Title"] = "Film Search";

}

    <section class="searchContainer">

        
            <form style="padding-left:0px;" asp-action="Search" method="get">
                <div>
                    <label id="SearchLabelText" for="SearchString">Search: </label>
                </div>
                <div>
                    <input class="SearchLabel" type="text" name="SearchString" id="SearchString" />
                    <button class="SearchInput" type="submit"><i class="fa fa-search"></i></button>
                </div>
            </form>
        
        

        <div>
            @if (ViewData["SearchString"] != null && (string)ViewData["SearchString"] != String.Empty)
            {
                <section id="FilmsSection" class="wrap">
                    @foreach (var item in Model)
                    {
                        <div class="BoxContainer">
                            <img src="~/images/@item.FilmImage" alt="@item.FilmTitle" class="BoxImage" />
                            <div class="BoxMiddle">
                                <div class="BoxText"><a asp-controller="Home" asp-action="FilmDetails" asp-route-id="@item.FilmID">@item.FilmTitle</a></div>
                            </div>
                        </div>
                        @*<p><a asp-controller="Home" asp-action="FilmDetails" asp-route-id="@item.FilmID">@item.FilmTitle Details</a></p>*@
                    }
                </section>
                

                if (Model.Count == 0)
                {
                <p>Sorry no matches.</p>
                }
                }
                </div>
            
    </section>


